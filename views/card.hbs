<h1>Basket</h1>

<div id="card">
  {{#if books.length}}
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each books}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button class="btn btn-small red js-remove" data-id="{{id}}">Delete</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<h4><b>Price: </b> <span class="price " >{{price}}</span></h4>
{{else}}
<div>
  <div class="row">
    <div class="col-md-12">
      <div class="card2">
        <div class="card-body cart">
          <div class="col-sm-12 empty-cart-cls text-center">
            <img src="https://i.imgur.com/dCdflKN.png" width="130" height="130" class="img-fluid mb-4 mr-3">
            <h3><strong>Your Cart is Empty</strong></h3>
            <h4>Add something to make me happy</h4>
            <a href="/books" class="btn btn-primary cart-btn-transform m-3" data-abc="true">continue shopping</a>
         </div>
     </div>				
   </div>			 
 </div>
</div>
{{/if}}
</div>